<Page x:Class="Fayzullina_Elvina_Rafaelevna.Pages.ProductsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fayzullina_Elvina_Rafaelevna.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsListPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <TextBox x:Name="SearchTB"
                       Width="350"
                       Style="{StaticResource TextBox}"
                     Height="30" TextChanged="SearchTB_TextChanged"></TextBox>
            <ComboBox x:Name="CBSort"
                      Style="{StaticResource ComboBox}"
                      Width="200"
                      Margin="20 0 0 0" SelectionChanged="CBSort_SelectionChanged">
                <ComboBoxItem>Наименование (по возрастанию)</ComboBoxItem>
                <ComboBoxItem>Наименование (по убыванию)</ComboBoxItem>
                <ComboBoxItem>Номер производственного цеха (по возрастанию)</ComboBoxItem>
                <ComboBoxItem>Номер производственного цеха (по убыванию)</ComboBoxItem>
                <ComboBoxItem>Минимальная стоимость (по возрастанию)</ComboBoxItem>
                <ComboBoxItem>Минимальная стоимость (по убыванию)</ComboBoxItem>
                <ComboBoxItem>Без сортировки</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="CBFilter"
          Style="{StaticResource ComboBox}"
          Width="200"
          Margin="20 0 0 0"
                      DisplayMemberPath="Title" SelectionChanged="CBFilter_SelectionChanged"></ComboBox>
            </StackPanel>

        <StackPanel Grid.Row="1">
            <ListView x:Name="LVProducts"
                      d:ItemsSource="{d:SampleData ItemCount=4}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled" Height="621" Width="896">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#A163F5"
                                Width="800"
                                Height="90"
                                BorderThickness="2">
                            <Grid>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel>
                                        <Image Source="{Binding DisplayImage}"
                                               Width="120"
                                               Height="80"></Image>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" Margin="20 0 0 0"
                                                Width="400">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ProductTypeTitle}"
                                       Style="{StaticResource TextBlockName}"></TextBlock>
                                            <TextBlock Text="|"
Style="{StaticResource TextBlockName}"
                                       Margin="10 0 0 0"></TextBlock>
                                            <TextBlock Text="{Binding Title}"
Style="{StaticResource TextBlockName}"
                                       Margin="10 0 0 0"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ArticleNumber}"
Style="{StaticResource TextBlock}"
                                       ></TextBlock>
                                           
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Materials}"
Style="{StaticResource TextBlock}" TextWrapping="Wrap" Width="300"
                                       ></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock x:Name="MaterialsTB"
Style="{StaticResource TextBlockName}"
                                       Margin="10 0 0 0"></TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding TotalCost}"
Style="{StaticResource TextBlock}"
                                       Margin="10 0 0 0">
                                        </TextBlock>
                                        <Button x:Name="EditBT"
                                                Style="{StaticResource ButtonStyle}"
                                                Content="Редактировать"
                                                Margin="0 10 0 0"
                                                Click="EditBT_Click"></Button>
                                        <Button x:Name="DeleteBT"
          Style="{StaticResource ButtonStyle}"
          Content="Удалить"
          Margin="0 10 0 0"
                                                Click="DeleteBT_Click"></Button>
                                    </StackPanel>
                                </StackPanel>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"></WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
            <Button x:Name="AddBt"
                    Style="{StaticResource ButtonStyle}"
                    Width="150"
                    Height="30"
                    Content="Добавить" Click="AddBt_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
