<Page x:Class="VosmerkaApp.Pages.MaterialListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VosmerkaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MaterialListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Поиск"/>
            <TextBox Name="SearchTb" TextChanged="SearchTb_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <TextBlock Text="Тип:"/>
            <ComboBox Name="FilterCb" SelectionChanged="FilterCb_SelectionChanged"></ComboBox>
        </StackPanel>
        <Button Width="200" Height="100" Name="BackBtn" Content="Назад" Click="BackBtn_Click"/>
        <ListView Name="ProductLv" Grid.Row="1" Grid.Column="1" SelectionChanged="ProductLv_SelectionChanged" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Source="{Binding Image}"></Image>
                        <StackPanel Orientation="Horizontal">

                            <StackPanel>
                                <TextBlock Text="{Binding Title}"/>
                                <TextBlock Text="{Binding ProductType.Title}"/>
                            </StackPanel>
                            <StackPanel Margin="200 0 0 0" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding MinCostForAgent}" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="ArticleNumber"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Width="200" Height="30" Name="AddBtn" Content="Добавить" Grid.Column="1" Grid.Row="2" Click="AddBtn_Click"/>
    </Grid>
</Page>
