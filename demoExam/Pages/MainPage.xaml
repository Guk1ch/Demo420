<Page x:Class="demoExam.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:demoExam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage"
      Loaded="Page_Loaded">

    <Grid>
        <StackPanel>
            <TextBox x:Name="SearchTB" Width="200" HorizontalAlignment="Left" TextChanged="SearchTB_TextChanged"/>
            <ComboBox x:Name="SortComboBox" HorizontalAlignment="Left" Width="200" SelectionChanged="SortComboBox_SelectionChanged">
                <ComboBoxItem>По возрастанию</ComboBoxItem>
                <ComboBoxItem>По убыванию</ComboBoxItem>
            </ComboBox>
            <ComboBox x:Name="FilterComboBox" HorizontalAlignment="Left" Width="200" SelectionChanged="FilterComboBox_SelectionChanged">
                <ComboBoxItem>Все типы</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <StackPanel Margin="0 50 0 10">
            <DataGrid x:Name="DgProducts"
                      IsReadOnly="True"
                      AutoGenerateColumns="False"
                      LoadingRow="DgProducts_LoadingRow">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                    <DataGridTextColumn Header="ProductTypeID" Binding="{Binding ProductTypeID}"/>
                    <DataGridTextColumn Header="ArticleNumber" Binding="{Binding ArticleNumber}"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}"/>
                    <DataGridTextColumn Header="Image" Binding="{Binding Image}"/>
                    <DataGridTextColumn Header="ProductionPersonCount" Binding="{Binding ProductionPersonCount}"/>
                    <DataGridTextColumn Header="ProductionWorkshopNumber" Binding="{Binding ProductionWorkshopNumber}"/>
                    <DataGridTextColumn Header="MinCostForAgent" Binding="{Binding MinCostForAgent}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="PrevPageButton" Content="Предыдущая" Click="PrevPageButton_Click"/>
                <TextBlock x:Name="PageNumberTextBlock" Margin="10 0"/>
                <Button x:Name="NextPageButton" Content="Следующая" Click="NextPageButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
