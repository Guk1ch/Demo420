<Page x:Class="EightZagirov420.Pages.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EightZagirov420.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1450"
      Title="EditPage">

    <Grid  Background="White">
        <StackPanel Width="1450"
                    Height="840"
                    >
            <StackPanel
                Width="400"
                Height="Auto"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Margin="5"
                >
                <Label
                    Content="Редактирование"
                    Style="{StaticResource HeaderStyle}"
                    Margin="5"
                    />
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Артикул:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <TextBox
                    x:Name="ArticleTbx"
                    Width="300"
                    Height="20"
                    />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Наименование:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <TextBox
                    x:Name="NameTbx"
                    Width="250"
                    Height="20"
                    />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Количество человек для производства:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <TextBox
                    x:Name="CountForProisvoTbx"
                    Width="100"
                    Height="20"
                    />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Номер производственного 
цеха:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <TextBox
                    x:Name="NumberChexTbx"
                    Width="100"
                    Height="20"
                    />
                    
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Минимальная стоимость агента:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <TextBox
                    x:Name="MinCostAgentTbx"
                    Width="100"
                    Height="20"
                    />

                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label
                    Content="Тип продукта:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                    <ComboBox
                    x:Name="TypeProductCB"
                    Width="150"
                    Height="20"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding ProductType.Title}"
                    />

                </StackPanel>
                <Button
                    x:Name="EditBtn"
                    Style="{StaticResource ButtonStyle}"
                    Width="100"
                    Height="20"
                    Margin="5"
                    Content="Редактировать" Click="EditBtn_Click"
                    
                    />
            </StackPanel>
            <Button
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Style="{StaticResource ButtonStyle}"
                Width="100"
                Height="30"
                Margin="5"
                x:Name="BackBtn"
                Content="Назад" Click="BackBtn_Click"
                />
        </StackPanel>
    </Grid>
</Page>
