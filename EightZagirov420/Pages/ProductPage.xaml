<Page x:Class="EightZagirov420.Pages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EightZagirov420.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1450"
      Title="ProductPage"
       Loaded="Page_Loaded"
      >

    <Grid Background="White">
            <StackPanel VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Orientation="Vertical"
            >
            <StackPanel Orientation="Horizontal"
            Width="800"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="AUTO">
                <Label
                    Content="Введите для поиска:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                <TextBox
                Width="150"
                Height="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="5"
                    FontFamily="Courier New"
                    x:Name="SearchTbx" TextChanged="SearchTbx_TextChanged"
                />
                <Label
                    Content="Сортировка:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                <ComboBox x:Name="SortCb" 
              FontFamily="Courier New" 
              FontSize="10"  
              Width="150"  
              Height="40" 
              Margin="0" 
              Background="Khaki" 
              Foreground="#A163F5" SelectionChanged="SortCb_SelectionChanged">
                    <ComboBox.ItemContainerStyle>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </ComboBox.ItemContainerStyle>
                    <ComboBoxItem>Нет</ComboBoxItem>
                    <ComboBoxItem >По возрастанию</ComboBoxItem>
                    <ComboBoxItem >По убыванию</ComboBoxItem>
                </ComboBox>
                <Label
                    Content="Фильтрация:"
                    Style="{StaticResource BaseStyle}"
                    Margin="5"
                    />
                <ComboBox
                    Width="134"
                    Height="30"
                    Margin="5 0 0 0"
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding Product}"
                    x:Name="TypeProductCB" SelectionChanged="TypeProductCB_SelectionChanged"
                    />
                
            </StackPanel>
            <Button
                Width="150"
                Height="20"
                Margin="5"
                x:Name="AddBtn"
                Style="{StaticResource ButtonStyle}"
                Content="Добавить продукцию" Click="AddBtn_Click"
                />
            <ListView x:Name="ProductLV" 
                  FontSize="40" 
                  VerticalAlignment="Center"
                  Grid.Column="0" 
                  Grid.ColumnSpan="8" 
                  Grid.Row="1" 
                  Grid.RowSpan="9"
                  d:ItemsSource="{d:SampleData ItemCount=5}"
                  Width="1100" 
                  Height="1000"
                   Margin="10 0 0 0" SelectionChanged="ProductLV_SelectionChanged"
                      >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="100" Columns="1"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="3" 
                            BorderBrush="#A163F5" 
                            Padding="1" Width="1059">
                            <StackPanel>
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">

                                        <StackPanel Orientation="Horizontal" 
                                                Width="190" 
                                                Margin="15">
                                            <Image Source="{Binding Image}" 
                                               Width="190"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" 
                                                Width="Auto" 
                                                Height="Auto">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock FontSize="26" 
                                                       Width="Auto"
                                                       Height="Auto"
                                                       FontFamily="Courier New" 
                                                       Text="{Binding ProductType.Title}" 
                                                       Margin="20 0 0 0"
                                                       />
                                                <Label 
                                                    Content="|"
                                                    Style="{StaticResource BaseStyle}"
                                                    />
                                                <TextBlock FontSize="26" 
                                                       Width="Auto"
                                                       Height="Auto"
                                                       FontFamily="Courier New" 
                                                       Text="{Binding Title}" 
                                                       Margin="20 0 0 0"
                                                       />
                                            </StackPanel>
                                            <TextBlock FontSize="26" 
                                                       Width="Auto"
                                                       Height="Auto"
                                                       FontFamily="Courier New" 
                                                       Text="{Binding ArticleNumber}" 
                                                       Margin="10"
                                                       />
                                           


                                        </StackPanel>
                                        <StackPanel
                                            Width="200"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Height="auto"
                                            Margin="200 0 0 0"
                                            >
                                            <TextBlock FontSize="25" 
                                                       Width="Auto"
                                                       Height="Auto"
                                                       FontFamily="Courier New" 
                                                       Text="{Binding MinCostForAgent}" 
                                                       Margin="10"
                                                       />
                                         </StackPanel>




                                        </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
