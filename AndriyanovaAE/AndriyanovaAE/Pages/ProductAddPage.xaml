<Page x:Class="AndriyanovaAE.Pages.ProductAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AndriyanovaAE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1800"
      Title="ProductAddPage">

    <Grid>
        <!--шаблон рамзетки-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="90"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="\logo.png" Width="100"/>
        <TextBlock Text="Восьмёрка Company" TextWrapping="Wrap" 
             Grid.Column="1"
             HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Продукт" 
             Style="{StaticResource main}"
             Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
             HorizontalAlignment="Center"/>
        <Button x:Name="backBtn" Content="назад"
          Grid.Row="1" Grid.ColumnSpan="2"
          Width="200" Click="backBtn_Click"/>
        <!--основная часть-->
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="0 20">
                <StackPanel>
                    <TextBlock Text="Название: " Margin="0 0 0 5"/>
                    <TextBlock Text="Артикул: " Margin="0 0 0 10"/>
                    <TextBlock Text="Минимальная стоимость: " Margin="0 0 0 5"/>
                    <TextBlock Text="Тип продукта: " Margin="0 10 0 5"/>
                    <TextBlock Text="Кол-во человек для производства: " Width="500"
                               HorizontalAlignment="Left"
                               TextWrapping="Wrap" />
                    
                    <TextBlock Text="Номер производства: " Width="500"
                               HorizontalAlignment="Left"
                               TextWrapping="Wrap" />
                    
                </StackPanel>
                <StackPanel>
                    <TextBox Width="400" Margin="0 0 0 5" x:Name="titleTb"/>
                    <TextBox Width="400" Margin="0 0 0 5" x:Name="articleTb"/>
                    <TextBox Width="400" Margin="0 0 0 5" x:Name="costTb"/>
                    <ComboBox Width="400" Margin="0 0 0 5" x:Name="typeCb"
                              ItemsSource="{Binding productTypes}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Title}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <TextBox Width="400" Margin="0 20 0 5" x:Name="personCountTb"/>
                    <TextBox Width="400" Margin="0 10 0 5" x:Name="numberWorkShopTb"/>
                </StackPanel>
                <StackPanel Margin="50 0 0 0">
                    <Image Source="{Binding image}" Name="img" MaxHeight="500" Height="500"
                           Width="400" MaxWidth="400"/>
                    <Button x:Name="photoBtn" Content="Добавить фото" Click="photoBtn_Click"/>
                </StackPanel>
            </StackPanel>

            <Button x:Name="AddBtn" Content="Сохранить" Click="AddBtn_Click" />
        </StackPanel>
    </Grid>
</Page>
