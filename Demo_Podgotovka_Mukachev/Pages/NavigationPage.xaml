<Page x:Class="Demo_Podgotovka_Mukachev.Pages.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_Podgotovka_Mukachev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="Материал" Width="200" Height="50" Click="MaterialNavigate"></Button>
            <Button Margin="0 20"  Content="Продукты" Width="200" Height="50" Click="ProductNavigate"></Button>
            <Button  Content="Заказы" Width="200" Height="50" Click="ZakazNavigate"></Button>
        </StackPanel>
    </Grid>
</Page>
