<Page x:Class="WpfApp1.pages.ProductsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsList">

    <Grid>
        <StackPanel Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0"
                         Margin="2"
                         Name="searchTB"
                         Grid.ColumnSpan="2" TextChanged="searchTB_TextChanged" />
                <Button Grid.Column="2"
                        Margin="2"
                        Name="changePrice" Click="changePrice_Click">
                    Изменить стоимость
                </Button>
                <ComboBox Grid.Column="3"
                          Margin="2"
                          Name="sortByCB"
                          SelectionChanged="sortByCB_SelectionChanged">
                    <ComboBoxItem>Наименование убыв.</ComboBoxItem>
                    <ComboBoxItem>Наименование возр.</ComboBoxItem>
                    <ComboBoxItem>Цех убыв.</ComboBoxItem>
                    <ComboBoxItem>Цех возр.</ComboBoxItem>
                    <ComboBoxItem>Мин.Стоимость убыв.</ComboBoxItem>
                    <ComboBoxItem>Мин.Стоимость возр.</ComboBoxItem>
                </ComboBox>
                <ComboBox Grid.Column="4"
                          Margin="2"
                          Name="filterByCB" SelectionChanged="filterByCB_SelectionChanged"/>
            </Grid>
            <ListView Name="productsLV"
                      Height="400"
                      VerticalAlignment="Stretch"
                      SelectionChanged="productsLV_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Image Height="40" Width="40"
                                   Grid.Column="0"
                                   Margin="0 0 10 0"
                                   Source="{Binding Path=Image}"
                                   VerticalAlignment="Center"/>
                            <StackPanel Margin="2"
                                        Grid.Column="1"
                                        Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Path=TypeName}"/>
                                    <TextBlock Text=" | "/>
                                    <TextBlock Text="{Binding Path=Name}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding Path=Article}"/>
                                <TextBlock Text="{Binding Path=Materials}"/>
                            </StackPanel>
                            <TextBlock HorizontalAlignment="Right"
                                       Grid.Column="2"
                                       Width="Auto"
                                       VerticalAlignment="Top"
                                       Text="{Binding Path=Cost}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel HorizontalAlignment="Right"
                        Name="navSP"
                        Orientation="Horizontal"/>
        </StackPanel>
    </Grid>
</Page>
