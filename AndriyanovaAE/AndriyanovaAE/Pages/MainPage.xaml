<Page x:Class="AndriyanovaAE.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AndriyanovaAE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1800"
      Title="MainPage">

    <Grid>
        <!--шаблон рамзетки--> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="90"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="\logo.png" Width="100"/>
        <TextBlock Text="Восьмёрка Company" TextWrapping="Wrap" 
                   Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Главная страница" 
                   Style="{StaticResource main}"
                   Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"/>
        <!--основная часть-->
        <StackPanel Grid.Row="2" Grid.Column="1" 
                    Grid.ColumnSpan="2" Grid.RowSpan="1"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Width="400" Height="400">
            <Button x:Name="productsBtn" Content="Продукция" Click="productsBtn_Click"/>
            <Button x:Name="materialsBtn" Content="Материалы"
                    Margin="0 50" Click="materialsBtn_Click"/>
        </StackPanel>

    </Grid>
</Page>
