<Page x:Class="KornilovaVarvara420Vosmerka.Pages.ProductionViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KornilovaVarvara420Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="" FontFamily="Courier New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchTB" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Height="80" Width="650" HorizontalAlignment="Left" Margin="30 0" FontSize="40" TextChanged="SearchTB_TextChanged"/>
        <ComboBox x:Name="sortCB" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" Height="80" Width="600" Margin="78,50,282,50" SelectionChanged="sortCB_SelectionChanged">
            <TextBlock Text="По возрастанию"/>
            <TextBlock Text="По убыванию"/>
        </ComboBox>
        <ComboBox x:Name="filtrCB" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Height="80" Width="500" SelectionChanged="filtrCB_SelectionChanged"
                  ItemsSource="{Binding productsType}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Button Content="Добавить"  x:Name="AddProductBTN" Grid.Row="2" Grid.Column="5"  Height="80" Width="300" FontSize="35" Background="#A163F5" Click="AddProductBTN_Click"/>
        <Button Content="Изменить"  x:Name="EditProductBTN" Grid.Row="3" Grid.Column="5" Height="80" Width="300" FontSize="35" Background="#A163F5" Click="EditProductBTN_Click"/>
        <Button Content="Удалить"  x:Name="RemoveProductBTN" Grid.Row="4" Grid.Column="5" Height="80" Width="300" FontSize="35" Background="#A163F5" Click="RemoveProductBTN_Click"/>

        <ListView x:Name="ProductsLV"
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Grid.RowSpan="5" Height="850" Width="1550" HorizontalAlignment="Left" Margin="30 0" 
                  d:ItemsSource="{Binding products}" FontSize="40">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="2" BorderBrush="Black" Margin="5 5" Padding="2">
                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel Orientation="Horizontal" Width="170" Margin="15">
                                        <Image Source="{Binding Image}" Width="150" Height="150"/>
                                    </StackPanel>

                                    <StackPanel Width="1300" Height="190">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding ProductType.Title}" ></TextBlock>
                                            <TextBlock Text=" | " ></TextBlock>
                                            <TextBlock Text="{Binding Title}"></TextBlock>
                                            <TextBlock Text="Стоимость" Margin="350 0 0 0" FontSize="35"></TextBlock>
                                        </StackPanel>
                                        <TextBlock Text="{Binding ArticleNumber}" FontSize="35"></TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Материалы: " ></TextBlock>
                                            <TextBlock Text="Материалы" ></TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
