<Page x:Class="CarWheels_Demo_SafiullinKamil.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarWheels_Demo_SafiullinKamil.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="ProductsPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Продукты" FontSize="30"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="SearchTb" Width="250" TextChanged="SearchTb_TextChanged"/>
                <ComboBox x:Name="SortCb" Width="175" Margin="25 0"/>
                <ComboBox x:Name="FiltrationCb" DisplayMemberPath="Title" Width="175" SelectionChanged="FiltrationCb_SelectionChanged"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="2">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <ListView x:Name="ProductsLv" d:ItemsSource="{d:SampleData ItemCount=3}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="1" Height="120" Margin="5">
                                <Grid>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="170"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Border>
                                            <Image Source="{Binding NewImagePath}" Style="{StaticResource LvImg}"/>
                                        </Border>
                                    </StackPanel>

                                    <Grid Grid.Column="1">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding TypeTitle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ArticleNumber}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center">
                                            <!--<TextBlock Text="{Binding ProductMaterial.Material.Title}"/>-->
                                        </StackPanel>

                                    </Grid>

                                    <Grid Grid.Column="2">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding MinCostForAgent, StringFormat=Цена: {0}}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button x:Name="EditBtn"  Content="Редактировать" Click="EditBtn_Click"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button x:Name="DeleteBtn" Content="Удалить" Click="DeleteBtn_Click"/>
                                        </StackPanel>

                                    </Grid>

                                </Grid>                                
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="3">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="AddProductBtn" Content="Добавить" Click="AddProductBtn_Click"/>
                <Button x:Name="BackBtn" Content="Назад" Margin="25 0 0 0" Click="BackBtn_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
