<Page x:Class="ProductsKudashovaAnna420.Pages.AllProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductsKudashovaAnna420.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllProductsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="SearchTbx"  
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />

        <ListView x:Name="ProductsLv"
                  Grid.Column="0"
                  Grid.ColumnSpan="4"
                  Grid.Row="1"
                  Grid.RowSpan="4"
                  Width="1170"
                  ItemsSource="{Binding products}"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <StackPanel Orientation="Horizontal" Width="1050" Height="100">
                            <Image Source="{Binding Image}" Width="100" Height="100"/>
                            <TextBlock Text="{Binding ProductType.Title}" FontSize="18" Foreground="Black"/>
                            <TextBlock Text=" | " FontSize="18" Foreground="Black"/>
                            <TextBlock Text="{Binding Title}" FontSize="18" Foreground="Black" Width="200" TextWrapping="Wrap"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ArticleNumber}" FontSize="18" Foreground="Black"/>
                                </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button  x:Name="AddBtn" Margin="190 0 0 0"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Добавить продукт"
                 Click="AddBtn_Click"
            />
        <Button  x:Name="DeleteBtn" Margin="190 0 0 0"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Удалить продукт"
                 Click="DeleteBtn_Click"
            />
        <Button  x:Name="RedactBtn" Margin="190 0 0 0"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="3"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Редактировать продукт"
                 Click="RedactBtn_Click"
            />
    </Grid>
</Page>
