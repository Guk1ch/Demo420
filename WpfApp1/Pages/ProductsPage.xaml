<Page x:Class="WpfApp1.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Продукция">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Vertical">
                <StackPanel>
                    <TextBlock Margin="0, 10, 10, 10" FontSize="20" FontWeight="SemiBold" Foreground="#A163F5">
                        Продукция
                    </TextBlock>


                    <Button Margin="0, 10, 0, 10" Click="Button_Click" Padding="4,8" Background="#A163F5" Cursor="Hand"  BorderThickness="0" Foreground="#FFFFFF">
                        Добавить продукцию
                    </Button>

                    <Button Margin="0, 10, 0, 10" Click="Edit_Button_Click" Padding="4,8" Background="#A163F5" Cursor="Hand"  BorderThickness="0" Foreground="#FFFFFF">
                        Редактировать продукцию
                    </Button>

                </StackPanel>
               
                <StackPanel Margin="0,0,0,20">
                    <TextBlock>Поиск:</TextBlock>
                    <TextBox Padding="4,8" BorderBrush="#A163F5" BorderThickness="2" x:Name="SearchTB" TextChanged="SearchTB_TextChanged"></TextBox>
                </StackPanel>
            </StackPanel>

            <ListView ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" x:Name="ProductsTable">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"></GridViewColumn>
                            <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}"></GridViewColumn>
                            <GridViewColumn Header="ProductType" DisplayMemberBinding="{Binding ProductType.Title}"></GridViewColumn>
                            <GridViewColumn Header="ArticleNumber" DisplayMemberBinding="{Binding ArticleNumber}"></GridViewColumn>
                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}"></GridViewColumn>
                            <GridViewColumn Header="ProductionPersonCount" DisplayMemberBinding="{Binding ProductionPersonCount}"></GridViewColumn>
                            <GridViewColumn Header="ProductionWorkshopNumber" DisplayMemberBinding="{Binding ProductionWorkshopNumber}"></GridViewColumn>
                        <GridViewColumn Header="MinCostForAgent" DisplayMemberBinding="{Binding MinCostForAgent}"></GridViewColumn>
                    </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
    </Grid>
</Page>
