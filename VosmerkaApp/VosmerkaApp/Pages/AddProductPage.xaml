<Page x:Class="VosmerkaApp.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VosmerkaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AddProductPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Width="200" Height="100" Name="BackBtn" Content="Назад" Click="BackBtn_Click"/>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <StackPanel>
                <TextBlock Text="Артикул"/>
                <TextBox Name="Art"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Название"/>
                <TextBox Name="Name"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Тип"/>
                <ComboBox Name="TypeCb"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Количество человек"/>
                <TextBox Name="Count"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Номер производства"/>
                <TextBox Name="Number"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Описание"/>
                <TextBox Name="Description"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Минимальная цена"/>
                <TextBox Name="MinimumCost"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
            <Button Width="200" Height="100" Name="SaveBtn" Content="Сохранить" Click="SaveBtn_Click"/>
            <Button Width="200" Height="100" Name="DeleteBtn" Click="DeleteBtn_Click" Content="Удалить" Visibility="Hidden"/>
        </StackPanel>
        

    </Grid>
</Page>
