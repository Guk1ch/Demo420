<Page x:Class="Sagdieva_Srez.Pages.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sagdieva_Srez.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="960" d:DesignWidth="1550"
      Title="ProductsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Margin="20"
                    Grid.Row="0">
            <TextBox x:Name="SearchTB"
                     Height="60"
                     Width="700"
                     BorderBrush="#A163F5"
                     BorderThickness="2"
                     Margin="0 0 20 0" TextChanged="SearchTB_TextChanged"/>
            <ComboBox x:Name="FilterCB"
                      Margin="0 0 20 0"
                Height="60"
                Width="375" SelectionChanged="FilterCB_SelectionChanged">
                <ComboBox.Items>
                    <TextBlock Text="По умолчанию"/>
                    <TextBlock Text="По возрастанию"/>
                    <TextBlock Text="По убыванию"/>
                </ComboBox.Items>
            </ComboBox>
            <ComboBox x:Name="SortCB"
               Height="60"
                Width="375"
                ItemsSource="{Binding productTypes}"
                SelectionChanged="SortCB_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <ListView Grid.Row="1"
                  d:ItemsSource="{d:SampleData ItemCount=20}"
                  Height="700"
                  VerticalAlignment="Center"
                  Width="1500"
                  x:Name="ProductsLV"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ItemsSource="{Binding Product}"
                BorderThickness="3"
                ScrollViewer.CanContentScroll="False">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                                   VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Height="160"
                            Width="1450"
                            Margin="5">
                        <Rectangle Fill="#D3D3D3"
                            VerticalAlignment="Bottom"
                            Width="1450"
                            Height="160"
                            RadiusX="20"
                            RadiusY="20"/>
                        <StackPanel Orientation="Horizontal">
                            <Image Stretch="Fill"
                                Source="{Binding Image}"
                                   Width="150"
                                   Height="130"
                                   HorizontalAlignment="Left"
                                   Margin="20"
                                   VerticalAlignment="Center">
                                <Image.Clip>
                                    <RectangleGeometry RadiusX="20" RadiusY="20" Rect="0,0,150,1230"/>
                                </Image.Clip>
                            </Image>
                            <StackPanel Width="1300"
                                Orientation="Horizontal">
                            <StackPanel Orientation="Vertical"
                                Margin="20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ProductType.Title}"
                                                FontSize="26"/>
                                    <TextBlock Text="{Binding Title, StringFormat=' | {0}'}"
                                                FontSize="26"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                                    <TextBlock Text="{Binding ArticleNumber}"
                                    HorizontalAlignment="Left"
                                    TextWrapping="Wrap"
                                    TextAlignment="Left"
                                    FontSize="24"
                                    Width="220"/>
                                    <ItemsControl ItemsSource="{Binding materials}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Title}" FontSize="18"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                                <TextBlock VerticalAlignment="Center"
                                    Text="{Binding Cost, StringFormat='Стоимость: {0}'}"/>
                        </StackPanel>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="2"
                    HorizontalAlignment="Center">
            <Button x:Name="AddBTN"
                    Width="400"
                    Height="80"
                    Margin="20 20 70 20" Click="AddBTN_Click">
                <TextBlock Text="Добавить"/>
            </Button>
            <Button x:Name="EditBTN"
                    Width="400" Margin="20 20 70 20"
Height="80" Click="EditBTN_Click">
                <TextBlock Text="Редактировать"/>
            </Button>
            <Button x:Name="DeleteBTN" Margin="20"
                    Width="400"
Height="80" Click="DeleteBTN_Click">
                <TextBlock Text="Удалить"/>
            </Button>
        </StackPanel>

    </Grid>
</Page>
