<Page x:Class="Demo_Podgotovka_Mukachev.Pages.ProductCRUDPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_Podgotovka_Mukachev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductCRUDPage">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="30" HorizontalAlignment="Center">Добавить продукцию</TextBlock>
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock FontSize="20">Артикль</TextBlock>
                <TextBox x:Name="ArticleTb" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock FontSize="20">Название</TextBlock>
                <TextBox x:Name="TitleTb" Width="200"></TextBox>
            </StackPanel>
            <StackPanel Margin="20" Orientation="Horizontal">
                <TextBlock FontSize="20">Стоимость</TextBlock>
                <TextBox x:Name="CostTb" Width="200"></TextBox>
            </StackPanel>
            

        </StackPanel>
    </Grid>
</Page>
