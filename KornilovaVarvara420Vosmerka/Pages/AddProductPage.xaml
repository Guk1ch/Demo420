<Page x:Class="KornilovaVarvara420Vosmerka.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KornilovaVarvara420Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="" FontFamily="Courier New">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление нового продукта" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="80" Width="1200" HorizontalAlignment="Left" Margin="50 0" FontSize="60"/>

        <TextBlock Text="Наименование:" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="80" Width="300" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="TitleTB" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Height="80" Width="550" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        
        <TextBlock Text="Артикул:" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Height="80" Width="300" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="ArticleNumTB" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Height="80" Width="550" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>

        <TextBlock Text="Описание:" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Height="80" Width="300" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="DescriptTB" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Height="80" Width="550" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>

        <TextBlock Text="Кол-во людей:" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Height="80" Width="300" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="ProductionPersonCountTB" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="3" Height="80" Width="550" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>

        <TextBlock Text="Цех:" Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Height="80" Width="300" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="ProductionWorkshopNumberTB" Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Height="80" Width="550" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>

        <TextBlock Text="Мин стоимость агента:" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2" Height="80" Width="600" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>
        <TextBox x:Name="MinCostForAgentTB" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="1" Height="80" Width="150" HorizontalAlignment="Left" Margin="10 0" FontSize="40"/>

        <Button Content="Сохарнить"  x:Name="OKBTN" Grid.Row="5" Grid.Column="5" Height="80" Width="300" FontSize="35" Background="#A163F5" Click="OKBTN_Click"/>
        <Button Content="Отмена"  x:Name="NoBTN" Grid.Row="5" Grid.Column="4" Height="80" Width="200" FontSize="35" Background="#A163F5" Click="NoBTN_Click"/>

        <ComboBox x:Name="ProdTypeCB" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Height="80" Width="500"
                  ItemsSource="{Binding productsType}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

    </Grid>
</Page>
