<Page x:Class="Vosmerka8_Demo_Safiullin.Pages.AddRedactPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka8_Demo_Safiullin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddRedactPage">

    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Background="#A163F5" Grid.Column="0" Grid.Row="1" Margin="10" Click="Button_Click">Назад</Button>
        <TextBlock Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" >название</TextBlock>
        <TextBox x:Name="Title" Grid.Row="1" Grid.Column="3" Margin="15" Grid.ColumnSpan="2"></TextBox>
        <TextBlock Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" >артикул</TextBlock>
        <TextBox x:Name="Article" Grid.Row="2" Grid.Column="3" Margin="15" Grid.ColumnSpan="2"></TextBox>
        <TextBlock Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" >комментарий</TextBlock>
        <TextBox x:Name="Disc" Grid.Row="3" Grid.Column="3" Margin="15" Grid.ColumnSpan="2"></TextBox>
        <TextBlock Grid.Column="3" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" >минимальная цена для агента</TextBlock>
        <TextBox x:Name="MinCost" Grid.Row="4" Grid.Column="3" Margin="15" Grid.ColumnSpan="2"></TextBox>
        <Button x:Name="SaveBt" Grid.Row="5" Grid.Column="3" Margin="15" Grid.ColumnSpan="2" Background="#A163F5" Click="SaveBt_Click">Сохранить</Button>
    
        <Image Name="Img" Source="{Binding Image}" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="3"/>
    </Grid>
</Page>
