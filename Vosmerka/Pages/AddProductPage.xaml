<Page x:Class="Vosmerka.Pages.AddProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1450"
      Title="AddProductPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="ДОБАВЛЕНИЕ ИНФОРМАЦИИ"
                   Grid.Column="2"
                   Grid.ColumnSpan="5"
                   Grid.RowSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="40"
                   FontFamily="Tw Cen MT"
                   FontWeight="DemiBold"
                   Foreground="#A163F5" 
                   Width="684"/>
        <TextBlock Text="Наименование продукта:"
                   Grid.Row="2"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   FontSize="35"
                   Height="Auto"
                   Width="428"
                   FontFamily="Tw Cen MT"
                   Foreground="#A163F5" Margin="158,20,0,0" Grid.ColumnSpan="4"/>
        <StackPanel Orientation="Vertical"
            Grid.Column="1"
            Grid.Row="2"
            Grid.RowSpan="2" Margin="29,63,10,23" Grid.ColumnSpan="2">
            <TextBox x:Name="TitleTb"
                     FontSize="30"
                     Height="Auto"
                     Width="Auto"
                     BorderBrush="#A163F5"/>
        </StackPanel>
        <TextBlock Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Left"
           FontSize="30"
           Height="Auto"
           Width="77"
           FontFamily="Tw Cen MT"
           Foreground="Orange" Grid.Column="4" Margin="94,0,0,0"/>
        <TextBox Name="EmailTb"
         Grid.Column="5"
         Grid.Row="2"
          Height="Auto"
         Width="Auto"
         FontSize="30"
         BorderBrush="Transparent"
         VerticalAlignment="Center"
         Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Horizontal"
            Grid.Row="3"
            Grid.Column="4"
            Grid.ColumnSpan="3"
            Grid.RowSpan="5">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Фото"
                       FontFamily="Tw Cen MT"
                       FontSize="35"
                       Width="100"
                       Foreground="#A163F5"
                       Margin="10"/>
                <Border CornerRadius="20"
                    Grid.Row="8"
                    Margin="0 40 0 0"
                    Background="#A163F5"
                    Height="50"
                    Grid.Column="6"
                    Width="200"
                    Grid.ColumnSpan="2">
                    <Button x:Name="changeBtn"
                        Content="добавить"
                        FontFamily="Tw Cen MT"
                        FontWeight="Medium"
                        FontSize="25"
                        Height="40"
                        Width="130"
                        Background="Transparent"
                        BorderBrush="Transparent" Click="changeBtn_Click"/>
                </Border>
            </StackPanel>
            <Image x:Name="TestImg"
                   Width="280" 
                   Height="280"
                   Margin="20 30 0 0"
                   Source="{Binding pro.PhotoBinary}"/>
        </StackPanel>
        <Border CornerRadius="20"
        Background="#A163F5"
        Height="50"
        Width="60">
            <Button x:Name="ExitBtn"
                    Content="✖"
                    FontFamily="Tw Cen MT"
                    FontWeight="Medium"
                    FontSize="25"
                    Background="Transparent"
                    BorderBrush="Transparent" Click="ExitBtn_Click"/>
        </Border>
        <Border CornerRadius="20"
        Grid.Row="8"
        Grid.RowSpan="2"
        Margin="0 40 0 0"
        Background="#A163F5"
        Height="50"
        Grid.Column="5"
        Width="250"
        Grid.ColumnSpan="3">
            <Button x:Name="AddBtn"
            Content="Сохранить"
            FontFamily="Tw Cen MT"
            FontWeight="Medium"
            FontSize="25"
            Height="40"
            Width="180"
            Background="Transparent"
            BorderBrush="Transparent" Click="AddBtn_Click"/>
        </Border>
        <TextBlock Text="        Артикул продукта:"
            Grid.Row="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            FontSize="35"
            Height="Auto"
            Width="428"
            FontFamily="Tw Cen MT"
            Foreground="#A163F5" Margin="158,0,0,0" Grid.ColumnSpan="4"/>
        <StackPanel Orientation="Vertical"
            Grid.Column="1"
            Grid.Row="5" Margin="29,2,10,0" Grid.ColumnSpan="2">
            <TextBox x:Name="ArticleNumberTb"
                FontSize="30"
                Height="Auto"
                Width="Auto"
                BorderBrush="#A163F5"/>
        </StackPanel>
        <TextBlock Text="             Стоимость:"
    Grid.Row="6"
    VerticalAlignment="Top"
    HorizontalAlignment="Left"
    FontSize="35"
    Height="Auto"
    Width="428"
    FontFamily="Tw Cen MT"
    Foreground="#A163F5" Margin="158,10,0,0" Grid.ColumnSpan="4"/>
        <StackPanel Orientation="Vertical"
    Grid.Column="1"
    Grid.Row="7" Margin="29,10,10,76" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBox x:Name="MinCostForAgentTb"
        FontSize="30"
        Height="Auto"
        Width="Auto"
        BorderBrush="#A163F5"/>
        </StackPanel>
    </Grid>
</Page>
