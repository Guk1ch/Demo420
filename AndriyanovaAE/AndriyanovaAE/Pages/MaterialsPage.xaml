<Page x:Class="AndriyanovaAE.Pages.MaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AndriyanovaAE.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1000" d:DesignWidth="1800"
      Title="MaterialsPage">

    <Grid>
        <!--шаблон рамзетки-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition />
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="90"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Image Source="\logo.png" Width="100"/>
        <TextBlock Text="Восьмёрка Company" TextWrapping="Wrap" 
                   Grid.Column="1"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Материалы компании" 
                   Style="{StaticResource main}"
                   Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"/>
        <Button x:Name="backBtn" Content="назад"
                Grid.Row="1" Grid.ColumnSpan="2"
                Width="200" Click="backBtn_Click"/>
        <!--основная часть-->
        <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                    VerticalAlignment="Center">

            <ListView d:ItemsSource="{d:SampleData ItemCount=9}" 
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      Width="1320" Height="500"
                      Name="materialsLv">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="1320">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="450"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="2">
                                <StackPanel Orientation="Horizontal"  >
                                    <TextBlock Text="{Binding MaterialType.Title}"  FontSize="33"/>
                                    <TextBlock Text=" | "/>
                                    <TextBlock Text="{Binding Title}" FontSize="33"/>
                                </StackPanel>
                                <TextBlock Text="{Binding CountInPack, StringFormat= 'В упаковке {0}'}" FontSize="30"/>
                                <TextBlock Text="{Binding CountInStock, StringFormat= 'На складе {0}'}" FontSize="30"/>

                            </StackPanel>
                            <TextBlock Grid.Column="3" HorizontalAlignment="Center" Text="{Binding Cost}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </StackPanel>
        
    </Grid>
</Page>
