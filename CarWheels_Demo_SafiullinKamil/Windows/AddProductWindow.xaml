<Window x:Class="CarWheels_Demo_SafiullinKamil.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarWheels_Demo_SafiullinKamil.Windows"
        mc:Ignorable="d"
        Title="&quot;Восьмерка&quot;" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Добавление продукта" FontSize="30"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Наименование"/>
                    <TextBox x:Name="TitleTb" Width="450"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="25 0 0 0">
                    <TextBlock Text="Тип продукта"/>
                    <ComboBox x:Name="ProductTypeCb" DisplayMemberPath="Title"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Артикул"/>
                    <TextBox x:Name="ArticleTb" PreviewTextInput="TextBoxInt_PreviewTextInput"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="25 0">
                    <TextBlock Text="Кол-во рабочих"/>
                    <TextBox x:Name="PersonCountTb" PreviewTextInput="TextBoxInt_PreviewTextInput"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0 0 25 0">
                    <TextBlock Text="№ цеха"/>
                    <TextBox x:Name="WorkShopNumberTb" PreviewTextInput="TextBoxInt_PreviewTextInput"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Стоимость"/>
                    <TextBox x:Name="CostTb" PreviewTextInput="TextBoxInt_PreviewTextInput"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Описание"/>
                    <TextBox x:Name="DescriptionTb" TextWrapping="Wrap" Width="500" Height="45"/>
                </StackPanel>
            </StackPanel>

        </Grid>

        <Grid Grid.Row="2">

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="AddProductBtn" Content="Добавить" Click="AddProductBtn_Click"/>
                <Button x:Name="CancelBtn" Content="Отмена" Margin="25 0 0 0" Click="CancelBtn_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
