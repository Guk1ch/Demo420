<Page x:Class="CarWheels_Demo_SafiullinKamil.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarWheels_Demo_SafiullinKamil.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="MainPage">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Главная страница" FontSize="30"/>
            </StackPanel>
            
        </Grid>

        <Grid Grid.Row="1">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ProductsBtn" Content="Продукция" Width="175" Click="ProductsBtn_Click"/>
                <Button x:Name="MaterialsBtn" Content="Материалы" Width="175" Margin="0 25" Click="MaterialsBtn_Click"/>
                <Button x:Name="ExitBtn" Content="Закрыть приложение" Width="175" Click="ExitBtn_Click"/>
            </StackPanel>

        </Grid>

    </Grid>
</Page>
