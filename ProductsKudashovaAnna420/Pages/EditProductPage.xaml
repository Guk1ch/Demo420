<Page x:Class="ProductsKudashovaAnna420.Pages.EditProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductsKudashovaAnna420.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditProductPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                   Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="NameTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="0"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />

        <TextBlock Text="Тип продукта" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <ComboBox x:Name="ProductTypeCbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  Grid.RowSpan="1"
                  Width="400"
                  FontSize="21"

                 Height="60"
                 ItemsSource="{Binding productTypes}"
                 >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <TextBlock Text="Артикул" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="ArticleTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="2"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />

        <TextBlock Text="Описание" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="3"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="DescriptonTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="3"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />


        <TextBlock Text="Количество человеек" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="4"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="ProductionPersonCountTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="4"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />



        <TextBlock Text="Номер цеха" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="5"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="ProductionWorkshopNumberTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="5"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />

        <TextBlock Text="Минимальная стоимость для агента" 
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Grid.Row="6"
                  Grid.RowSpan="1"
                  Width="400"
                  Height="60"
                     Style="{StaticResource TbxStyle}"
                 />


        <TextBox x:Name="MinCostForAgentTbx"  
                  Grid.Column="1"
                  Grid.ColumnSpan="2"
                  Grid.Row="6"
                  Grid.RowSpan="1"
                  Width="400"
                 Height="60"
                 />

        <Image x:Name="PhotoProduct"
                  Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="1"
                  Grid.RowSpan="3"
                  Width="300"
                  Height="300"
            />

        <Button  x:Name="EditPhotoBtn" Margin="190 0 0 0"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="4"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Редактировать фото"
                 Click="EditPhotoBtn_Click"
            />


        <Button  x:Name="EditBtn" Margin="190 0 0 40"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="5"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Реадктировать продукт"
                 Click="EditBtn_Click"
            />

        <Button  x:Name="BackBtn" Margin="190 0 0 40"
                Grid.Column="3"
                  Grid.ColumnSpan="2"
                  Grid.Row="6"
                  Grid.RowSpan="1"
                  Width="400"
                 Style="{StaticResource ButtonStyle}"
                 Height="60"
                 Content="Назад"
                 Click="BackBtn_Click"
            />

    </Grid>
</Page>
