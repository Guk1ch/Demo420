<Page x:Class="Vosmerka.Pages.MainHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vosmerka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="1450"
      Title="MainHomePage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.ColumnSpan="2"
            Orientation="Horizontal" Margin="58,12,10,10" Grid.Column="1">
            <TextBox x:Name="NameTb" 
                     FontFamily="Courier New"
                     FontSize="20" 
                     Width="232" 
                     Height="40"
                     Foreground="Black" 
                     TextChanged="NameTb_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Column="3"
                    Orientation="Horizontal"
                    Margin="26,10,78,6" 
                    Grid.ColumnSpan="3">
            <TextBlock Text="Сортировка"
                       FontFamily="Courier New"
                       FontSize="20"
                       Margin="40 0 0 0"
                       VerticalAlignment="Center"/>
            <ComboBox x:Name="SortCb"
                      FontFamily="Courier New"
                      FontSize="25" 
                      Width="200" 
                      Height="40"
                      Margin="25 10 0 0"
                      Background="Khaki"
                      Foreground="#A163F5" SelectionChanged="SortCb_SelectionChanged">
                <ComboBox.ItemContainerStyle>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </ComboBox.ItemContainerStyle>
                <ComboBoxItem>Нет</ComboBoxItem>
                <ComboBoxItem >По возрастанию</ComboBoxItem>
                <ComboBoxItem >По убыванию</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <ListView x:Name="ProductLV" 
                   FontSize="40" 
                   VerticalAlignment="Center"
                   Grid.Column="0" 
                   Grid.ColumnSpan="8" 
                   Grid.Row="1" 
                   Grid.RowSpan="9"
                   d:ItemsSource="{d:SampleData ItemCount=5}"
                   Width="1100" 
                   Height="600" SelectionChanged="ProductLV_SelectionChanged">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="100" Columns="1"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="3" 
                     BorderBrush="#A163F5" 
                     Padding="1" Width="1059">
                        <StackPanel>
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">

                                    <StackPanel Orientation="Horizontal" 
                                         Width="190" 
                                         Margin="15">
                                        <Image Source="{Binding PhotoBinary}" 
                                        Width="190"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Vertical" 
                                                Width="630" 
                                                Margin="0 0 0 0">
                                        <StackPanel Orientation="Horizontal"
                                                    Width="740" 
                                                    Height="Auto" 
                                                    Margin="0 0 0 10">

                                            <TextBlock FontSize="26" 
                                                Width="Auto"
                                                Height="Auto"
                                                FontFamily="Tw Cen MT" 
                                                Text="{Binding ProductType.Title}" 
                                                Margin="10 0 0 0"
                                                />
                                            <TextBlock FontSize="26" 
                                                    Width="Auto"
                                                    Height="Auto"
                                                    FontFamily="Tw Cen MT" 
                                                    Text="|" 
                                                    Margin="10 0 0 0"
                                                    />
                                            <TextBlock FontSize="26" 
                                                        Width="Auto"
                                                        Height="Auto"
                                                        FontFamily="Tw Cen MT" 
                                                        Text="{Binding Title}" 
                                                        Margin="10 0 0 0"
                                                        />
                                            <TextBlock FontSize="26" 
                                                        Width="Auto"
                                                        Height="Auto"
                                                        FontFamily="Tw Cen MT" 
                                                        Text="{Binding MinCostForAgent}" 
                                                        Margin="10 0 0 0"
                                                        />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                             Width="740" 
                                             Height="Auto" Margin="0 0 0 10">

                                            <TextBlock FontSize="26" 
                                                Width="Auto"
                                                Height="Auto"
                                                FontFamily="Tw Cen MT" 
                                                Text="{Binding ArticleNumber}" 
                                                Margin="10 0 0 0"
                                                />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal"
                                                     Width="740" 
                                                     Height="Auto" Margin="0 0 0 10">

                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="удалить" 
                                                    FontFamily="Tw Cen MT" 
                                                    x:Name="DeleteBtn"
                                                    Width="150" 
                                                    Height="50" 
                                                    Background="#A163F5"
                                                    Margin="20 20 0 20" 
                                                    FontSize="25"
                                                    Click="DeleteBtn_Click"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border CornerRadius="20"
                Margin="91,17,22,17"
                Background="#A163F5"
                Height="50"
                Grid.Column="5"
                Width="250"
                Grid.ColumnSpan="2">
            <Button x:Name="AddBtn"
                    Content="Добавить"
                    FontFamily="Tw Cen MT"
                    FontWeight="Medium"
                    FontSize="25"
                    Height="40"
                    Width="180"
                    Background="Transparent"
                    BorderBrush="Transparent" Click="AddBtn_Click"/>
        </Border>
    </Grid>
</Page>
