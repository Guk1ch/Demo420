<Page x:Class="ProductStoreEgor.Pages.EnterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProductStoreEgor.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EnterPage">

    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="40">Добро пожаловать</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Click="Button_Click_ProductList">Список продуктов</Button>
            <Button Click="Button_Click_MaterialList">Список материалов</Button>
            <Button Click="Button_Click_OrderList">Список заказов</Button>
        </StackPanel>
    </Grid>
</Page>
