<Page x:Class="VosmerkaApp.Pages.ProductListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VosmerkaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ProductListPage"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Поиск"/>
            <TextBox Name="SearchTb" TextChanged="SearchTb_TextChanged"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="2">
            <TextBlock Text="Тип:"/>
            <ComboBox Name="FilterCb" SelectionChanged="FilterCb_SelectionChanged"></ComboBox>
        </StackPanel>
        <Button Width="200" Height="30" Name="MaterialBtn" Content="Материалы" Grid.Column="0" Margin="220,155,220,165" Grid.Row="0" Click="MaterialBtn_Click"/>

        <ListView Background="#A163F5" Name="ProductLv" Grid.Row="1" Grid.Column="1" SelectionChanged="ProductLv_SelectionChanged" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Width="40"
                                   Height="40" 
                               Source="{Binding Image}"/>
                        <StackPanel Orientation="Horizontal">
                            
                            <StackPanel>
                                <TextBlock Text="{Binding Title}"/>
                                <TextBlock Text="{Binding ProductType.Title}"/>
                            </StackPanel>
                            <StackPanel Margin="200 0 0 0" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding MinCostForAgent}" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </StackPanel>
                            <StackPanel>
                                <TextBlock Text="ArticleNumber"/>
                            </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Width="200" Height="30" Name="AddBtn" Content="Добавить" Grid.Column="1" Margin="220,155,220,165" Grid.Row="2" Click="AddBtn_Click"/>
    </Grid>
</Page>
